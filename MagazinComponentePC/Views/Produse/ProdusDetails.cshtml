        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descriere)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pret)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pret)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stoc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stoc)
        </dd>
    </dl>
    <div>
        @if (User.IsInRole("User") || User.IsInRole("Admin"))
        {
            <button onclick="location.href='@Url.Action("CreateComanda")'" class="btn btn-danger">Comanda</button>
        }
    </div>
	<div>
		@if (User.IsInRole("Admin"))
		{
        <button onclick="location.href='@Url.Action("Edit", new { id = Model.ProdusId })'" class="btn btn-warning">Edit</button>
        }
        <br />
        <button onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary">Back to List</button>
    </div>

