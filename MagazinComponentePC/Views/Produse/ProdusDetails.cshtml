        @if (User.IsInRole("Admin"))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ProdusId)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ProdusId)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeProdus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeProdus)
